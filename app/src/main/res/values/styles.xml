<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text -->
    <style name="textHeadingOne" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_extra_large_size</item>
        <item name="fontFamily">@font/lora_bold</item>
    </style>

    <style name="textHeadingTwo" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_large_size</item>
        <item name="fontFamily">@font/lora_bold</item>
    </style>

    <style name="textHeadingThree" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_medium_size</item>
        <item name="fontFamily">@font/lora_bold</item>
    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedSquare">
        <item name="cornerSize">8%</item>
    </style>

    <style name="editTextWithIcon" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/txt_tiny_size</item>
        <item name="android:padding">@dimen/card_default_padding</item>
        <item name="android:minHeight">@dimen/txt_field_min_height</item>
        <item name="android:background">@drawable/bg_txt_field_state</item>
        <item name="android:drawablePadding">@dimen/txt_field_drawable_start_space</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_small_size</item>
        <item name="android:padding">@dimen/btn_default_padding</item>
    </style>

    <style name="error_appearance" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/txt_extra_tiny_size</item>
    </style>

</resources>